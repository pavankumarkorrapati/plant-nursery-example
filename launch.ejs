<div class="container">
            <form action="/launch" method="post">
        <div class="row m-0 p-2 pl-8 pr-8">
            <div class="col">
                
                <h5 class="form_heading">Product Details*</h5>
            </div>
        
            <div class="col-12">
            
               
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="basic-addon1">Product Name</span>
                    </div>
                    <input type="text" class="form-control"aria-label="Name" name="ecomuser[name]" aria-describedby="basic-addon1" required>
                  </div>
                 
               
            </div>
            

            <div class="col-12">
                <div class="row">
                   <div class="col-12 col-md-4">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                          <span class="input-group-text" id="basic-addon1">Brand</span>
                        </div >
                        <input type="text" class="form-control"aria-label="Name" name="ecomuser[brand]" aria-describedby="basic-addon1" required>
                      </div>
                    </div>

                    <div class="col-12 col-md-4">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                              <span class="input-group-text" id="basic-addon1">Submitted BY</span>
                            </div>
                            <input type="text" class="form-control"aria-label="Name" name="ecomuser[publisher]" aria-describedby="basic-addon1" required>
                          </div>
                        </div>

                        <div class="col-12 col-md-4">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                  <span class="input-group-text" id="basic-addon1">Color</span>
                                </div>
                                <input type="text" class="form-control"aria-label="Name" name="ecomuser[color]" aria-describedby="basic-addon1" required>
                              </div>
                            </div>                   
                </div>



        </div>
       
        <div class="col-12">
            <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text" >Description</span>
                </div>
                <textarea class="form-control" name="ecomuser[description]" aria-label="With textarea" required></textarea>
              </div>
            </div>

           
                                   

            <div class="col">
                <hr>
                <h5 class="form_heading">Classification*</h5>
            </div>
                <div class="col-12">
                        <div class="row justify-content-between">
                            <div class="col-md-5 m-2">
                                <h6>Genre</h6>
                                <div class="row">
                                    <div class="col-6">
                        <input type="radio"  id="Books" value="Books" name="ecomuser[genre]"><label for="Books">Books</label><br>
                        <input type="radio" id="Beauty" value="Beauty" name="ecomuser[genre]"><label for="Beauty">Beauty</label><br>
                        <input type="radio" id="Mobiles" value="Mobiles" name="ecomuser[genre]"><label for="Mobiles">Mobiles</label><br>
                        <input type="radio" id="Women'sFashion" value="Women'sFashion" name="ecomuser[genre]"><label for="Women'sFashion">Women'sFashion</label><br>
                                    </div>
                                    <div class="col-6">
                        <input type="radio"  id="Men'sFashion" value="Men'sFashion" name="ecomuser[genre]"><label for="Men'sFashion">Men'sFashion</label><br>
                        <input type="radio"  id="Sports" value="Sports" name="ecomuser[genre]"><label for="Sports">Sports</label><br>
                        <input type="radio"  id="Bags" value="Bags" name="ecomuser[genre]"><label for="Bags">Bags</label><br>
                        <input type="radio"  id="SmartHome" value="SmartHome" name="ecomuser[genre]"><label for="SmartHome">SmartHome</label><br>
                                    </div>
                                </div>
                    </div>
                    <div class="col-md-5 m-2">
                        
                        <h6>Language</h6>
                        <div class="row">
                            <div class="col-6">
                                
                                <input type="radio"  id="English" value="English" name="ecomuser[language]"><label for="english">English</label><br>
                                <input type="radio" id="Telugu" value="Telugu" name="ecomuser[language]"><label for="telugu">Telugu</label><br>
                                <input type="radio"  id="Hindi" value="Hindi" name="ecomuser[language]"><label for="hindi">Hindi</label><br>
                        

                            </div>
                            <div class="col-6">
                                <input type="radio"  id="Kannada" value="Kannada" name="ecomuser[language]"><label for="kannada">Kannada</label><br>
                        <input type="radio"  id="Tamil" value="Tamil" name="ecomuser[language]"><label for="tamil">Tamil</label><br>
                            </div>
                            
                        </div>
                    
                    </div>
                    </div>

                </div>
                <div class="col">
                    <hr>
                    <h5 class="form_heading">Image*</h5>
                </div>
                <div class="col-12">
                    <div class="row">
                        <div class="col-12 col-md-5">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                  <span class="input-group-text" id="basic-addon1">Image Link</span>
                                </div>
                                <input type="text" class="form-control"aria-label="Link" aria-describedby="basic-addon1" required name="ecomuser[image_link]>
                              </div>
                        </div>
                        <div class="col-md-1 text-center">
                            <p>OR</p>
                        </div>
                        <div class="col-12 col-md-5">
                            <input type="file" name="" id="">
                        </div>
                    </div>
                </div>

                <div class="col">
                    <hr>
                    <h5 class="form_heading">Product Links</h5>
                </div>
                <div class="col-12">
                    <div class="row">
            <div class="col-md-6">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="basic-addon1">Amazon Link</span>
                    </div>
                    <input type="text" class="form-control"aria-label="Amazon Link" name="ecomuser[amazon_link]" aria-describedby="basic-addon1">
                  </div>
                </div>
                <div class="col-md-6">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                          <span class="input-group-text" id="basic-addon1">Flikart Link</span>
                        </div>
                        <input type="text" class="form-control"aria-label="Flipkart Link" name="ecomuser[flipkart_link]" aria-describedby="basic-addon1">
                      </div>
                </div>
                        

                    </div>   
                </div>
         </div>

         <div class="col">
          <hr>
          <h5 class="form_heading">keepa&review Links</h5>
      </div>
      <div class="col-12">
          <div class="row">
  <div class="col-md-6">
      <div class="input-group mb-3">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Keepa Link</span>
          </div>
          <input type="text" class="form-control" name="ecomuser[keepa_link]" aria-describedby="basic-addon1">
        </div>
      </div>
      <div class="col-md-6">
          <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Review Link</span>
              </div>
              <input type="text" class="form-control" name="ecomuser[ebook_link]" aria-describedby="basic-addon1">
            </div>
      </div>
              

          </div>   
      </div>

    
     
      
          
      </div>
